{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build with gcc (recursive)",
			"command": "/usr/bin/g++ -fdiagnostics-color=always -std=c++20 -g $(find ${workspaceFolder} -name '*.cpp') -o ${workspaceFolder}/main",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}